
<h1>New Review</h1>
<%= form_for [@restaurant, @review], class: "form-inline" do |r| %>

  <%= r.label :content, 'Add content' %>
  <%= r.text_field :content %>

  <%= r.label :rating, 'Enter a review between 0-5' %>
  <%= r.text_field :rating %>
  <%= r.submit "submit", class: "btn btn-primary" %>
<% end %>
